@model Bemay.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <div class="col-sm-6">
        <h4>Book Info</h4>
        <hr />
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AuthorFullName)
        </dd>
        <dt class="col-sm-2">
            Categories
        </dt>
        <dd class="col-sm-10">
                @foreach (var category in Model.BookCategories)
                {
                    <span>@category.Category.CategoryName</span>
                    <br />
                }
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.EditionYear)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.EditionYear)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Language)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PageCount)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PageCount)
        </dd>
            @if (User.IsInRole("Admin"))
            {
                <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.CreatedAt)
                </dd>
                <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                </dt>
                <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.UpdatedAt)
                </dd>
            }
        </div>
        <div class="col-sm-6">
            <h4>Book Image</h4>
             <hr />
            @if (Model.Image != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Book Image" class="img-responsive" style="max-width: 100%; height: auto;" />
            }
        </div>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
